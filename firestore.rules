rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read posts. Create/update/delete are handled by Cloud Functions.
    match /community_posts/{postId} {
      allow read: if request.auth != null;
      
      // Rules for the comments subcollection
      match /comments/{commentId} {
        // Allow any authenticated user to read comments.
        allow read: if request.auth != null;
        
        // Allow a user to create a comment only if they are the author.
        allow create: if request.auth != null && request.auth.uid == request.resource.data.authorId;
      }
    }
  }
}
