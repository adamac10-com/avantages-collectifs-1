
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the partners collection
    match /partners/{partnerId} {
      allow read: if true;
    }

    // Allow authenticated users to create and view concierge requests
    match /conciergeRequests/{requestId} {
      allow read, create: if request.auth != null;
    }

    // Default to locked down for any other collection
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
