
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read their own user document and for profiles to be created
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow logged-in users to create concierge requests
    // Allow any authenticated user to read requests (for concierge dashboard)
    match /conciergeRequests/{requestId} {
      allow read, create: if request.auth.uid != null;
    }
    
    // Rules for the 'partners' collection
    // Any authenticated user can read the list of partners.
    match /partners/{partnerId} {
        allow read: if request.auth != null;
    }

    // Règle pour la collection des récompenses
    // Tout utilisateur connecté peut lire la liste des récompenses.
    match /rewards/{rewardId} {
      allow read: if request.auth != null;
    }
    
    // Allow users to read their own transactions and create new ones
    match /transactions/{transactionId} {
        allow read, create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}
