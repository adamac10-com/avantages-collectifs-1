rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Les utilisateurs peuvent lire et mettre à jour leur propre document
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Les utilisateurs connectés peuvent créer des demandes de concierge
    match /conciergeRequests/{requestId} {
      allow create: if request.auth != null;
      // Seul un utilisateur avec un rôle de concierge (à implémenter) pourrait lire/mettre à jour toutes les demandes
      // Pour l'instant, on se base sur l'authentification simple
      allow read, update, delete: if request.auth != null;
    }

    // Les utilisateurs connectés peuvent lire la liste des partenaires
    match /partners/{partnerId} {
      allow read: if request.auth != null;
    }

    // Les utilisateurs connectés peuvent lire et écrire dans la communauté
    match /forumThreads/{threadId}/{document=**} {
       allow read, write: if request.auth != null;
    }

    // Les utilisateurs peuvent lire leur propre historique de transactions
    match /transactions/{transactionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Règle pour la collection des récompenses
    // Tout utilisateur connecté peut lire la liste des récompenses.
    match /rewards/{rewardId} {
      allow read: if request.auth != null;
    }
  }
}
