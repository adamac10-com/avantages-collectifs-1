rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Règle pour la collection des partenaires
    match /partners/{partnerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Règle pour les demandes des membres
    match /conciergeRequests/{requestId} {
      allow create: if request.auth.uid == request.resource.data.memberId;
      allow read, update: if request.auth.uid == resource.data.memberId;
    }

    // Règle pour les données utilisateur
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }

    // Règle pour le forum
    match /forum_threads/{threadId}/{document=**} {
      allow read, write: if request.auth != null;
    }

  }
}
